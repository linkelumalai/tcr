package learn.strms.terminal;

import java.util.List;

public class FindingAndMatching {

	public static void main(String[] args) {

		List<Item> items = getItems();

		boolean allInStock = items.stream().allMatch(Item::getIsStock);
		System.out.println(allInStock);

	}

	public static List<Item> getItems() {
		return List.of(new Item("Samsung", 22900.00, true, false), new Item("SmartPhone", 10000.00, true, true),
				new Item("Headphone", 1500.00, false, true), new Item("Camera", 20000.00, true, true),
				new Item("SmartWatch", 30000.00, true, false));
	}
}

class Item {
	private String itemName;

	private Double itemValue;

	private Boolean isStock;

	private Boolean onSale;

	public String getItemName() {
		return itemName;
	}

	public void setItemName(String itemName) {
		this.itemName = itemName;
	}

	public Double getItemValue() {
		return itemValue;
	}

	public void setItemValue(Double itemValue) {
		this.itemValue = itemValue;
	}

	public Boolean getIsStock() {
		return isStock;
	}

	public void setIsStock(Boolean isStock) {
		this.isStock = isStock;
	}

	public Boolean getOnSale() {
		return onSale;
	}

	public void setOnSale(Boolean onSale) {
		this.onSale = onSale;
	}

	public Item(String itemName, Double itemValue, Boolean isStock, Boolean onSale) {
		super();
		this.itemName = itemName;
		this.itemValue = itemValue;
		this.isStock = isStock;
		this.onSale = onSale;
	}

	@Override
	public String toString() {
		return "Item [itemName=" + itemName + ", itemValue=" + itemValue + ", isStock=" + isStock + ", onSale=" + onSale
				+ "]";
	}

}
