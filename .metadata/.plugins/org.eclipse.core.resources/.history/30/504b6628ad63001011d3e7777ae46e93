package learn.methodref;

public class StaticMethodRef {

	public static void main(String[] args) {

		ArithmeticPreformance opr = (a, b) -> {
			int sum = a + b;
			System.out.println(sum);
			return sum;
		};

		opr.perform(6, 7);
		
		// here dont wanna use the above full definition instead 
		ArithmeticPreformance methodRef = StaticMethodRef::AddtionPrefom; 
		System.out.println(methodRef.perform(3, 3));
	}

	// this method is developed before the method ref 
	public static int AddtionPrefom(int a, int b) {
		int sum = a + b;
		return sum;
	}
}
